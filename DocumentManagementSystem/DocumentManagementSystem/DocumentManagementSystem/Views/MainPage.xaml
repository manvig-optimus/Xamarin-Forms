<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocumentManagementSystem.Views.MainPage"
             xmlns:pages="clr-namespace:DocumentManagementSystem.Views"
                  Title="Main Page" NavigationPage.HasNavigationBar="False">
  <MasterDetailPage.Master>
    <pages:MainPageMaster x:Name="MasterPage" />
  </MasterDetailPage.Master>
    
  <MasterDetailPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <pages:UserProfile />
      </x:Arguments>
    </NavigationPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>