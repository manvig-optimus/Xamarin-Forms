<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocumentManagementSystem.Views.LoginApp"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Drive Files Management" Style="{DynamicResource TitleStyle}" HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold" Margin="0,20,0,0"/>
            <Image Source="DocumentManagement.jpg" VerticalOptions="CenterAndExpand" Aspect="AspectFit" />
            <Button Text="Login using Google" Command="{Binding GoogleLogin}" HorizontalOptions="Center" 
                    BackgroundColor="LightCoral" TextColor="Black" BorderColor="Black" BorderWidth="2" Margin="0,0,0,50" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>